<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map_view">

    <fragment
        android:id="@+id/navigation_map_view"
        android:name="com.christophedurand.go4lunch.ui.mapView.MapFragment"
        android:label="@string/map_view_title"
        tools:layout="@layout/fragment_map_view" />

    <fragment
        android:id="@+id/navigation_list_view"
        android:name="com.christophedurand.go4lunch.ui.listView.ListFragment"
        android:label="@string/list_view_title"
        tools:layout="@layout/item_restaurant" />

    <fragment
        android:id="@+id/navigation_workmates_view"
        android:name="com.christophedurand.go4lunch.ui.workmatesView.WorkmatesFragment"
        android:label="@string/workmates_view_title"
        tools:layout="@layout/fragment_workmates_list" />

</navigation>