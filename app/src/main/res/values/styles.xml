<resources>
"
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorLightGrey</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="SignInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorTransparency</item>
        <item name="colorAccent">@color/colorWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_sign_in</item>
        <item name="title">Go4Lunch</item>
        <item name="titleTextStyle">@style/FirebaseUI.Text</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>